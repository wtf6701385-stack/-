local UI = {}

function UI:Init()
    local CoreGui = game:GetService("CoreGui")
    local RunService = game:GetService("RunService")
    
    if CoreGui:FindFirstChild("NEKOUI_MAIN") then CoreGui.NEKOUI_MAIN:Destroy() end

    local Gui = Instance.new("ScreenGui", CoreGui)
    Gui.Name = "NEKOUI_MAIN"
    Gui.ResetOnSpawn = false
    Gui.IgnoreGuiInset = true

    -- ‰∏ªÊ°ÜÊû∂
    local Main = Instance.new("Frame", Gui)
    Main.Size = UDim2.new(0, 420, 0, 260)
    Main.Position = UDim2.new(0.5, -210, 0.5, -130)
    Main.BackgroundColor3 = Color3.fromRGB(20, 20, 24)
    Main.BorderSizePixel = 0
    Main.Active = true
    Main.Draggable = true
    Main.ClipsDescendants = true -- Á¢∫‰øùÂúìËßíË£ÅÂàá
    Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 14)

    -- Ëß£Ê±∫Á©øÂπ´ÁöÑÈÇäÊ°Ü
    local Stroke = Instance.new("UIStroke", Main)
    Stroke.Thickness = 2.5
    Stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    RunService.RenderStepped:Connect(function() Stroke.Color = Color3.fromHSV((tick() * 0.4) % 1, 0.6, 1) end)

    -- Ê®ôÈ°åÂàó (Á¢∫‰øùÂú®ÊúÄÈ†ÇÂ±§)
    local Top = Instance.new("Frame", Main)
    Top.Size = UDim2.new(1, 0, 0, 40)
    Top.BackgroundTransparency = 1
    Top.ZIndex = 50
    
    local T = Instance.new("TextLabel", Top)
    T.Size = UDim2.new(1, -50, 1, 0); T.Position = UDim2.new(0, 14, 0, 0)
    T.Text = "  ‡∏Ö^‚Ä¢Ôªå‚Ä¢^‡∏Ö  NEKO HUB"; T.TextColor3 = Color3.new(1, 1, 1)
    T.Font = "GothamBold"; T.TextSize = 16; T.TextXAlignment = "Left"; T.BackgroundTransparency = 1; T.ZIndex = 51

    local MiniBtn = Instance.new("TextButton", Top)
    MiniBtn.Size = UDim2.new(0, 40, 0, 40); MiniBtn.Position = UDim2.new(1, -45, 0, 0)
    MiniBtn.Text = "‚Äî"; MiniBtn.TextColor3 = Color3.new(1, 1, 1); MiniBtn.BackgroundTransparency = 1; MiniBtn.TextSize = 25; MiniBtn.ZIndex = 51

    -- ÂÖßÂÆπÂçÄ (È†êË®≠ÈñãÂïü)
    local Content = Instance.new("Frame", Main)
    Content.Size = UDim2.new(1, 0, 1, -40); Content.Position = UDim2.new(0, 0, 0, 40)
    Content.BackgroundTransparency = 1; Content.ZIndex = 2; Content.Visible = true

    -- Êî∂ÂêàÈÇèËºØ (‰øÆÊ≠£Áâà)
    local opened = true
    local fullSize = Main.Size
    MiniBtn.MouseButton1Click:Connect(function()
        opened = not opened
        Content.Visible = opened -- Á´ãÂç≥ÂàáÊèõÈÅøÂÖçÈ°ØÁ§∫Âª∂ÈÅ≤
        Main:TweenSize(opened and fullSize or UDim2.new(0, 200, 0, 40), "Out", "Quart", 0.3, true)
        MiniBtn.Text = opened and "‚Äî" or "+"
    end)

    local TabBar = Instance.new("Frame", Content)
    TabBar.Size = UDim2.new(0, 110, 1, -10); TabBar.Position = UDim2.new(0, 10, 0, 5); TabBar.BackgroundTransparency = 1; TabBar.ZIndex = 5
    Instance.new("UIListLayout", TabBar).Padding = UDim.new(0, 6)

    local Pages = Instance.new("Frame", Content)
    Pages.Size = UDim2.new(1, -140, 1, -10); Pages.Position = UDim2.new(0, 130, 0, 5); Pages.BackgroundTransparency = 1; Pages.ZIndex = 5

    local Lib = {}

    function Lib:CreateTab(name, default)
        local Page = Instance.new("ScrollingFrame", Pages)
        Page.Size = UDim2.new(1, 0, 1, 0); Page.BackgroundTransparency = 1
        Page.Visible = default or false; Page.ScrollBarThickness = 0; Page.ZIndex = 10
        local L = Instance.new("UIListLayout", Page); L.Padding = UDim.new(0, 8)
        
        local B = Instance.new("TextButton", TabBar)
        B.Size = UDim2.new(1, 0, 0, 32); B.Text = name; B.BackgroundColor3 = Color3.fromRGB(30, 30, 36)
        B.TextColor3 = default and Color3.new(1, 1, 1) or Color3.fromRGB(160, 160, 160)
        B.ZIndex = 10; B.Font = "GothamMedium"; B.TextSize = 12; Instance.new("UICorner", B)
        
        B.MouseButton1Click:Connect(function()
            for _, p in pairs(Pages:GetChildren()) do if p:IsA("ScrollingFrame") then p.Visible = false end end
            for _, b in pairs(TabBar:GetChildren()) do if b:IsA("TextButton") then b.TextColor3 = Color3.fromRGB(160, 160, 160) end end
            Page.Visible = true; B.TextColor3 = Color3.new(1, 1, 1)
        end)

        local TabObj = {}
        function TabObj:AddButton(text, callback)
            local btn = Instance.new("TextButton", Page)
            btn.Size = UDim2.new(0.95, 0, 0, 36); btn.Text = "  üê± " .. text
            btn.BackgroundColor3 = Color3.fromRGB(35, 35, 42); btn.TextColor3 = Color3.new(1, 1, 1)
            btn.Font = "Gotham"; btn.TextSize = 14; btn.TextXAlignment = "Left"; btn.ZIndex = 15
            Instance.new("UICorner", btn)
            btn.MouseButton1Click:Connect(function() callback(btn) end)
            task.spawn(function() Page.CanvasSize = UDim2.new(0, 0, 0, L.AbsoluteContentSize.Y + 10) end)
            return btn
        end

        function TabObj:AddInfo(title, desc)
            local f = Instance.new("Frame", Page); f.Size = UDim2.new(0.95, 0, 0, 56)
            f.BackgroundColor3 = Color3.fromRGB(25, 25, 30); f.ZIndex = 15; Instance.new("UICorner", f)
            local t = Instance.new("TextLabel", f); t.Text = title; t.Size = UDim2.new(1, -10, 0, 22); t.Position = UDim2.new(0, 10, 0, 6)
            t.TextColor3 = Color3.fromRGB(255, 180, 180); t.BackgroundTransparency = 1; t.ZIndex = 16; t.Font = "GothamBold"; t.TextSize = 12; t.TextXAlignment = "Left"
            local d = Instance.new("TextLabel", f); d.Text = desc; d.Size = UDim2.new(1, -10, 0, 22); d.Position = UDim2.new(0, 10, 0, 28)
            d.TextColor3 = Color3.fromRGB(200, 200, 200); d.BackgroundTransparency = 1; d.ZIndex = 16; d.Font = "Gotham"; d.TextSize = 11; d.TextXAlignment = "Left"
            task.spawn(function() Page.CanvasSize = UDim2.new(0, 0, 0, L.AbsoluteContentSize.Y + 10) end)
        end
        return TabObj
    end
    return Lib
end
return UI
