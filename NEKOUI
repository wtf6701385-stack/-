-- [[ üéÄ NEKO TERMINAL - PURE UI FRAMEWORK üéÄ ]] --
-- Âü∫ÊñºÈõ∂‰∏≠ÂøÉÈÇèËºØÔºåÁ¥î UI Â∞ÅË£ùÁâà

local library = {}
local services = setmetatable({}, {__index = function(t, k) return game:GetService(k) end})
local mouse = services.Players.LocalPlayer:GetMouse()

-- Ë¶ñË¶∫ÈÖçÁΩÆ (‰∏ª‰∫∫ÁöÑÂçäÈÄèÊòéÈªëÁæéÂ≠∏)
local TextColor = Color3.fromRGB(255, 255, 255)
local Background = Color3.fromRGB(0, 0, 0)
local BackgroundTransparency = 0.5
local zyColor = Color3.fromRGB(30, 30, 30)
local beijingColor = Color3.fromRGB(255, 120, 180) -- Ë≤ìÂí™Á≤âÁ¥ÖÈªûÁ∂¥

-- Âü∫Á§éÂáΩÂºè (Tween, Ripple, Drag) 
local function Tween(obj, t, data)
    services.TweenService:Create(obj, TweenInfo.new(t[1], Enum.EasingStyle[t[2]], Enum.EasingDirection[t[3]]), data):Play()
end

local function Drag(frame, hold)
    local dragging, dragInput, dragStart, startPos
    hold.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true; dragStart = input.Position; startPos = frame.Position
            input.Changed:Connect(function() if input.UserInputState == Enum.UserInputState.End then dragging = false end end)
        end
    end)
    services.UserInputService.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
end

function library.new(name)
    local dogent = Instance.new("ScreenGui", services.CoreGui); dogent.Name = "NEKO_UI"
    
    -- ‰∏ªË¶ñÁ™ó
    local Main = Instance.new("Frame", dogent)
    Main.Size = UDim2.new(0, 572, 0, 353); Main.Position = UDim2.new(0.5, -286, 0.5, -176)
    Main.BackgroundColor3 = Background; Main.BackgroundTransparency = BackgroundTransparency; Main.Visible = false
    Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 6)
    Drag(Main, Main)

    -- „Äê üêæ Âè≥‰∏äËßíÂõ∫ÂÆöÈñãÈóú „Äë
    local Open = Instance.new("TextButton", dogent)
    Open.Size = UDim2.new(0, 80, 0, 35); Open.Position = UDim2.new(1, -100, 0, 20) -- Âè≥‰∏äËßí‰ΩçÁΩÆ
    Open.BackgroundColor3 = Background; Open.BackgroundTransparency = 0.3
    Open.Text = "üêæ Èõ∂‰∏≠ÂøÉ"; Open.TextColor3 = TextColor; Open.Font = "GothamBold"; Open.TextSize = 14
    Instance.new("UICorner", Open).CornerRadius = UDim.new(0, 6)
    Open.Draggable = true
    Open.MouseButton1Click:Connect(function() Main.Visible = not Main.Visible end)

    -- ÂÅ¥ÈÇäÊ¨ÑËàáÂàÜÈ†ÅÂÆπÂô®
    local Side = Instance.new("Frame", Main)
    Side.Size = UDim2.new(0, 130, 1, 0); Side.BackgroundColor3 = zyColor; Side.BackgroundTransparency = 0.5
    Instance.new("UICorner", Side).CornerRadius = UDim.new(0, 6)
    
    local TabContainer = Instance.new("ScrollingFrame", Side)
    TabContainer.Size = UDim2.new(1, 0, 1, -50); TabContainer.Position = UDim2.new(0, 0, 0, 50); TabContainer.BackgroundTransparency = 1; TabContainer.ScrollBarThickness = 0
    local TabList = Instance.new("UIListLayout", TabContainer); TabList.Padding = UDim.new(0, 5)

    local PageContainer = Instance.new("Frame", Main)
    PageContainer.Size = UDim2.new(1, -140, 1, -10); PageContainer.Position = UDim2.new(0, 135, 0, 5); PageContainer.BackgroundTransparency = 1

    -- Ê®ôÈ°å
    local Title = Instance.new("TextLabel", Side)
    Title.Size = UDim2.new(1, 0, 0, 40); Title.Text = name; Title.TextColor3 = TextColor; Title.Font = "GothamBlack"; Title.TextSize = 16; Title.BackgroundTransparency = 1

    local window = { currentTab = nil }

    function window.Tab(name)
        local Page = Instance.new("ScrollingFrame", PageContainer)
        Page.Size = UDim2.new(1, 0, 1, 0); Page.BackgroundTransparency = 1; Page.Visible = false; Page.ScrollBarThickness = 2
        Instance.new("UIListLayout", Page).Padding = UDim.new(0, 8)

        local TabBtn = Instance.new("TextButton", TabContainer)
        TabBtn.Size = UDim2.new(1, -10, 0, 35); TabBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50); TabBtn.BackgroundTransparency = 0.8
        TabBtn.Text = name; TabBtn.TextColor3 = Color3.fromRGB(200, 200, 200); TabBtn.Font = "GothamMedium"; TabBtn.TextSize = 12
        Instance.new("UICorner", TabBtn)

        TabBtn.MouseButton1Click:Connect(function()
            if window.currentTab then window.currentTab.Page.Visible = false; window.currentTab.Btn.TextColor3 = Color3.fromRGB(200, 200, 200) end
            Page.Visible = true; TabBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
            window.currentTab = {Page = Page, Btn = TabBtn}
        end)

        if not window.currentTab then 
            Page.Visible = true; TabBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
            window.currentTab = {Page = Page, Btn = TabBtn}
        end

        local tab = {}

        function tab.Section(title)
            local Section = Instance.new("Frame", Page)
            Section.Size = UDim2.new(0.98, 0, 0, 40); Section.BackgroundColor3 = zyColor; Section.BackgroundTransparency = 0.5; Section.ClipsDescendants = true
            Instance.new("UICorner", Section)
            
            local SecTitle = Instance.new("TextLabel", Section)
            SecTitle.Size = UDim2.new(1, 0, 0, 30); SecTitle.Position = UDim2.new(0, 10, 0, 0); SecTitle.Text = title; SecTitle.TextColor3 = beijingColor; SecTitle.Font = "GothamBold"; SecTitle.TextSize = 14; SecTitle.TextXAlignment = "Left"; SecTitle.BackgroundTransparency = 1

            local Objs = Instance.new("Frame", Section)
            Objs.Position = UDim2.new(0, 0, 0, 35); Objs.Size = UDim2.new(1, 0, 0, 0); Objs.BackgroundTransparency = 1
            local ObjsL = Instance.new("UIListLayout", Objs); ObjsL.Padding = UDim.new(0, 5); ObjsL.HorizontalAlignment = "Center"

            ObjsL:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
                Section.Size = UDim2.new(0.98, 0, 0, ObjsL.AbsoluteContentSize.Y + 45)
            end)

            local section = {}

            function section.Toggle(text, callback)
                local Tgl = Instance.new("TextButton", Objs)
                Tgl.Size = UDim2.new(0.95, 0, 0, 35); Tgl.BackgroundColor3 = Color3.fromRGB(40, 40, 40); Tgl.Text = "  " .. text; Tgl.TextColor3 = TextColor; Tgl.Font = "Gotham"; Tgl.TextSize = 12; Tgl.TextXAlignment = "Left"
                Instance.new("UICorner", Tgl)
                
                local State = false
                local Ind = Instance.new("Frame", Tgl); Ind.Size = UDim2.new(0, 40, 0, 20); Ind.Position = UDim2.new(1, -50, 0.5, -10); Ind.BackgroundColor3 = Color3.fromRGB(100, 20, 20)
                Instance.new("UICorner", Ind)

                Tgl.MouseButton1Click:Connect(function()
                    State = not State
                    Tween(Ind, {0.2, "Sine", "Out"}, {BackgroundColor3 = State and Color3.fromRGB(20, 100, 20) or Color3.fromRGB(100, 20, 20)})
                    callback(State)
                end)
            end

            function section.Button(text, callback)
                local Btn = Instance.new("TextButton", Objs)
                Btn.Size = UDim2.new(0.95, 0, 0, 35); Btn.BackgroundColor3 = Color3.fromRGB(45, 45, 50); Btn.Text = text; Btn.TextColor3 = TextColor; Btn.Font = "GothamMedium"; Btn.TextSize = 12
                Instance.new("UICorner", Btn)
                Btn.MouseButton1Click:Connect(callback)
            end

            return section
        end
        return tab
    end
    return window
end

-- ==========================================
-- ‰ΩøÁî®ÁØÑ‰æãÔºö
-- ==========================================
local myUI = library.new("üêæ NEKO UI")
local MainTab = myUI.Tab("‰∏ªÂäüËÉΩ")
local Sec1 = MainTab.Section("Êà∞È¨•Á≥ªÁµ±")

Sec1.Toggle("Ëá™ÂãïÁçµÊÆ∫", function(state) print("ÁçµÊÆ∫:", state) end)
Sec1.Button("Á´ãÂç≥ÂÅúÊ≠¢", function() print("Â∑≤ÂÅúÊ≠¢") end)

local SettingTab = myUI.Tab("Ë®≠ÁΩÆ")
local Sec2 = SettingTab.Section("‰ªãÈù¢Ë®≠ÁΩÆ")
Sec2.Button("ÈáçÁΩÆ‰ΩçÁΩÆ", function() print("ÈáçÁΩÆ") end)
