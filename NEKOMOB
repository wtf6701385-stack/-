local Settings = {
    AttackDelay = 0.1, -- BF éœ€è¦æ›´å¿«çš„å¾‹å‹•
    PullDistance = 3, -- å°±åœ¨çœ¼å‰
    SearchDistance = 3000
}

local LP = game.Players.LocalPlayer
local CombatRemote = game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("Validator")

task.spawn(function()
    while true do
        if _G.MOB then
            pcall(function()
                local char = LP.Character
                local root = char and char:FindFirstChild("HumanoidRootPart")
                local tool = char and char:FindFirstChildOfClass("Tool")

                if char and root and tool and tool:FindFirstChild("Attack") then
                    local enemies = workspace.Enemies:GetChildren()
                    for _, v in ipairs(enemies) do
                        local vHum = v:FindFirstChildOfClass("Humanoid")
                        local vRoot = v:FindFirstChild("HumanoidRootPart")
                        
                        if vHum and vHum.Health > 0 and vRoot then
                            local dist = (vRoot.Position - root.Position).Magnitude
                            if dist < Settings.SearchDistance then
                                -- // å½±ï¼šBF å°ˆå±¬â€”â€”ç©ºé–“é‡ç–Š // --
                                vRoot.CFrame = root.CFrame * CFrame.new(0, 0, -Settings.PullDistance)
                                vRoot.CanCollide = false -- é˜²æ­¢ç¢°æ’žæŠŠä¸»äººå½ˆé–‹
                                
                                -- // å½±ï¼šç™¼é€ BF æ”»æ“Šå”è­° // --
                                CombatRemote:FireServer(math.huge) -- ç¹žéŽéƒ¨åˆ†é©—è­‰
                            end
                        end
                    end
                end
            end)
        end
        task.wait(Settings.AttackDelay)
    end
end)
