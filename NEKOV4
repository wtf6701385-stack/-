-- [[ NEKOV4 - 修正版 ]]
local Players = game:GetService("Players")
local LP = Players.LocalPlayer

if _G.V4_Loop_Started then return end
_G.V4_Loop_Started = true

local function callAwakeningRemote()
    local bp = LP:FindFirstChild("Backpack")
    local char = LP.Character
    local awake = (bp and bp:FindFirstChild("Awakening")) or (char and char:FindFirstChild("Awakening"))
    if awake and awake:FindFirstChild("RemoteFunction") then
        pcall(function() awake.RemoteFunction:InvokeServer(true) end)
    end
end

task.spawn(function()
    while true do
        if _G.AutoV4 then -- 對接主腳本開關
            callAwakeningRemote()
        end
        task.wait(1)
    end
end)
