-- [[ æ ¸å¿ƒé‚è¼¯ ]]
game:GetService("RunService").Heartbeat:Connect(function()
    pcall(function() player.CameraMaxZoomDistance = 1000 end)
end)

local function KillCombat()
    _G.FastAttack = false
    _G.CurrentFastAtkID = "KILL_" .. tick()
end

-- --- UI å¯¦ä½œ --- --

-- 1. å…¬å‘Šé é¢
local p0, l0 = Lib:CreateTab("è²“å…¬å‘Š", true)
