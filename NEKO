local success, NEKOLib = pcall(function()
    return loadstring(game:HttpGet("https://raw.githubusercontent.com/wtf6701385-stack/-/refs/heads/main/NEKOUI?t="..tick()))()
end)

if not success or not NEKOLib then
    warn("âŒ NEKO UI è¼‰å…¥å¤±æ•—ï¼")
    return
end

local Lib = NEKOLib:Init()
local player = game:GetService("Players").LocalPlayer

_G.PVP = false
_G.MOB = false
_G.FastAttack = false
_G.CurrentFastAtkID = ""

local function KillCombat()
    _G.FastAttack = false
    _G.CurrentFastAtkID = "KILL_" .. tick()
    task.wait(0.2) -- çµ¦æ ¸å¿ƒè‡ªæ¯€çš„æ™‚é–“
end

-- è²“æˆ°é¬¥é é¢
local Tab1 = Lib:CreateTab("è²“æˆ°é¬¥", false)
local btnPVP, btnMOB

-- PVP ç¥åˆ€é–‹é—œ
btnPVP = Tab1:AddButton("æ‰“æ¶æ¨¡å¼ : OFF", function(self)
    _G.PVP = not _G.PVP
    if _G.PVP then
        _G.MOB = false
        if btnMOB then btnMOB.Text = "  åˆ·æ€ªæ¨¡å¼ : OFF" end
        KillCombat()
        
        -- ã€å•Ÿå‹•é—œéµã€‘ç”¢ç”Ÿç”Ÿå‘½æ¨™ç±¤ä¸¦è¼‰å…¥
        _G.CurrentFastAtkID = "START_PVP_" .. tick()
        _G.FastAttack = true
        loadstring(game:HttpGet("https://raw.githubusercontent.com/wtf6701385-stack/-/refs/heads/main/NEKOPVP?t="..tick()))()
    else
        KillCombat()
    end
    self.Text = "  æ‰“æ¶æ¨¡å¼ : " .. (_G.PVP and "ON" or "OFF")
end)

-- MOB ç¥åˆ€é–‹é—œ
btnMOB = Tab1:AddButton("åˆ·æ€ªæ¨¡å¼ : OFF", function(self)
    _G.MOB = not _G.MOB
    if _G.MOB then
        _G.PVP = false
        if btnPVP then btnPVP.Text = "  æ‰“æ¶æ¨¡å¼ : OFF" end
        KillCombat()
        
        _G.CurrentFastAtkID = "START_MOB_" .. tick()
        _G.FastAttack = true
        loadstring(game:HttpGet("https://raw.githubusercontent.com/wtf6701385-stack/-/refs/heads/main/NEKOMOB?t="..tick()))()
    else
        KillCombat()
    end
    self.Text = "  åˆ·æ€ªæ¨¡å¼ : " .. (_G.MOB and "ON" or "OFF")
end)

